---
import Header from "@components/shared/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-zinc-900 dark:text-zinc-200 relative min-h-screen h-auto flex flex-col items-center">
		<button id="btnMode" class="dark:bg-white bg-zinc-800 text-zinc-800 fixed bottom-2 right-2 text-2xl w-12 h-12 rounded-full"></button>
		<Header />
		<main class="flex flex-col items-center mx-5 my-6 max-w-[1360px]">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		font-family: 'Asap Variable', sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #f5f5f5;
		color: #333333;
	}
</style>

<script>
	const btnMode = document.getElementById('btnMode');
	btnMode?.addEventListener('click', () => {
		document.documentElement.classList.toggle('dark');
	});
</script>