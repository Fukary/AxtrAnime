---
import AsideMenu from "@components/shared/AsideMenu.astro";
import Header from "@components/shared/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="app" class="dark:bg-zinc-900 dark:text-zinc-200 relative h-screen">
		<button id="btnMode" class="dark:bg-white bg-zinc-800 text-zinc-800 fixed bottom-2 right-2 text-2xl w-12 h-12 rounded-full"></button>
		<Header />
		<aside class="[grid-area:aside] flex flex-col">
			<AsideMenu />
		</aside>
		<main class="[grid-area:main] flex flex-col items-center mx-12 py-6 overflow-y-auto">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		font-family: 'Asap Variable', sans-serif;
		background-color: #f5f5f5;
		color: #333333;
	}

	#app {
		display: grid;
		grid-template-areas: 
			"header header header"
			"aside   main   main";
		grid-template-columns: 250px 1fr;
		grid-template-rows: auto 1fr;
	}
</style>

<script>
	const btnMode = document.getElementById('btnMode');
	btnMode?.addEventListener('click', () => {
		document.documentElement.classList.toggle('dark');
	});
</script>